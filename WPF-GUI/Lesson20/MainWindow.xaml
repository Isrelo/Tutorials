<Window xmlns:Views="clr-namespace:TransactionRegister"  
        x:Class="TransactionRegister.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TransactionRegister"        
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="56" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Application Toolbar -->
        <Views:Toolbar x:Name="MainToolbar"
                       Grid.Row="0"/>

        <!-- Application Workspace-->
        <Views:WorkspaceView x:Name="MainWorkspace" 
                             Grid.Row="1"/>
        
    </Grid>
</Window>
